.container.content
	%nav.breadcrumb
		%ul
			%li
				%a{ :href => "/" } 首页
			%li
				注册

%article.main-section.edit
	= form_for :publisher, :url => { :action => 'create' } do |f|	

		%section
			%h3 用户注册
			
			%fieldset
				= label_tag 'publisher[email]', 'Email'
				= f.email_field :email, :placeholder => '填写你的电子邮件...'
				= label_tag 'publisher[alternative_name]', '用户名'
				= f.text_field :alternative_name, :placeholder => '留下在页面上显示的名字...'
			
			%fieldset
				%label 密码
				%input{ :type => 'password', :size => 20, :placeholder => '设置密码...' }
				= label_tag 'publisher[password]', '确认密码'
				= f.password_field :password, :size => 20, :placeholder => '再次输入确认密码...'

			%p
				= f.submit '保存', :class => 'btn btn-primary'