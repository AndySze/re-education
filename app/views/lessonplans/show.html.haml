.course-header.clearfix
	.theme
		%h1 #创新课
		%p 关于创新的课堂实践
.page.container
	-if can? :update, @lessonplan
		.page-action
			%a{ :href => "#{edit_lessonplan_path(@lessonplan.id)}" }
				编辑
				%i.icon-edit
			= link_to '删除', lessonplan_path(), :confirm => '确定要删除么？', :method => :delete
			%i.icon-trash

	.row-fluid
		.span9
			.section
				%h2= @lessonplan.title
				%p= @lessonplan.content.html_safe
			- unless @lessonplan.tasks.empty?
				%hr.soften
				.section.clearfix{'ng-controller' => 'TasksController', 'ng-init' => "init(#{@lessonplan.id})"}
					%h5 教学条目[{{tasks.length}}]
					%ul.task-list
						%li.task.clearfix{ 'ng-repeat' => 'task in tasks' }
							.pull-left
								%label.task-order {{$index+1}}
							.task-content.pull-left
								%h6 {{task.title}}
								%p.task-content-text {{task.content}}

			- unless @lessonplan.attachment_url.nil?
				%hr.soften
					%h5 图片附件
					%div.single
						%a{:href => @lessonplan.attachment_url, :id => 'single-image'}
							%img.image-item{ :src => @lessonplan.attachment_url }

			- if feature_on?
				%hr.soften
				.section.clearfix
					%h5 作业
					%ul.homework-list
						%li.homework.clearfix

			%hr.soften
			.section.clearfix{ 'ng-controller' => 'CommentsController', 'ng-init' => "init(#{@lessonplan.id})" }
				%h5 评论[{{comments.length}}]
				.comment.clearfix{ 'ng-repeat' => 'comment in comments' }
					.comment-avatar
						%img{ 'ng-src' => "{{comment.user.avatar_url}}" }
					.comment-content
						%small.nick-name {{comment.user.nick_name}}
						%time.comment-time {{formatDateTime(comment.updated_at)}}
						%p {{comment.content}}
				- if online
					.comment.clearfix
						= form_for :comment, :url => lessonplan_comments_url(@lessonplan), :html => { 'ng-submit' => 'submitForm()' } do |f|
							= f.text_area :content, :placeholder => "评论一下这个教案...", :rows => 3, 'ng-model' => 'new_comment_content'
							= f.submit '提交', :class => 'btn'

		.span3
			.right-content
				.section
					.plan
						%img.avatar.img-rounded{ :src => @lessonplan.symbol_img_url }
					%h2.name= @lessonplan.title
					%p= @lessonplan.short_description
					%button.btn.btn-strong{ :type => "button" }
						交作业
						%i.icon-file.icon-white

				%hr.soften
				.section
					%h5 关注者
					%ul.member-list.clearfix
