.course-header.clearfix
	%h1 家乡
.row-fluid
	.span9
		.section
			%h2= @lessonplan.title
			%p= @lessonplan.content.html_safe
		%hr.soften
		.section.clearfix
			= javascript_include_tag "controllers/tasks.controller"
			.task-list{ 'ng-controller' => 'TasksController', 'ng-init' => "init(#{@lessonplan.id})" }
				%h5 教学条目[{{tasks.length}}]
				.task.clearfix{ 'data-toggle' => "collapse", 'data-target' => "#task1", 'ng-repeat' => 'task in tasks' }
					.task-like.pull-left
						%label.like-number 1872
					.task-content.pull-left
						%h6 {{task.title}}
						%small
							%img{ :src => "/assets/image1.jpeg" }
							%a{ :href => "#" } 马东
							上海 宝山
						%p.task-content-text {{task.content}}
						%p.task-content-action
							%a{ :href => "#" } 评论(12)
				= form_for :task, :url => lessonplan_tasks_url(@lessonplan),  :html => { :id => 'add-task-form', 'ng-submit' => 'submitForm()' } do |f|
					%label 条目名
					= f.text_field :title, :placeholder => '例如给家乡的火车站拍一张照片...', 'ng-model' => 'new_task_title'
					%label 条目内容
					= f.text_area :content, :placeholder => '你的家乡的湖有不同的美...', :rows => 3, :maxlength => 100, 'ng-model' => 'new_task_content'
					= f.submit '添加一条', :class => 'btn'
	.span3
		.right-content
			.section
				.plan
					%img.avatar.img-rounded{ :src => @lessonplan.symbol_img_url }
				%h2.name= @lessonplan.title
				%p= @lessonplan.short_description
				%button.btn.btn-strong{ :type => "button" } 
					交作业 
					%i.icon-file.icon-white
    
			%hr.soften
			.section
				%h5 关注者[8]
				%ul.member-list.clearfix
					%li
						%img.img-rounded{ :src => "/assets/image1.jpeg" }
					%li
						%img.img-rounded{ :src => "/assets/image2.jpeg" }
					%li
						%img.img-rounded{ :src => "/assets/image6.jpeg" }
					%li
						%img.img-rounded{ :src => "/assets/image7.jpeg" }
					%li
						%img.img-rounded{ :src => "/assets/image9.jpeg" }
					%li
						%img.img-rounded{ :src => "/assets/image15.jpeg" }
					%li
						%img.img-rounded{ :src => "/assets/image8.jpeg" }
					%li
						%img.img-rounded{ :src => "/assets/image10.jpeg" }
            