= javascript_include_tag "ckeditor/init"
= javascript_include_tag "ckeditor/config"
.course-header.clearfix
	%img.logo.img-rounded{ :src => "/assets/logo.png" }
	%h1 我的家乡
= form_for :lessonplan, :url => { :action => 'create' } do |f|	
	.row
		.span9
			.page-action
				= f.submit '保存', :class => 'btn btn-link'
			.row
				.span4
					.section
						%h5 基础信息
						= label_tag 'lessonplan[title]', '教案名称'
						= f.text_field :title, :placeholder => '给你的教案起一个名字...'
						= label_tag 'lessonplan[short_description]', '简短描述'
						= f.text_area :short_description, :placeholder => '给你的教案写个简单描述...', :rows => 4, :maxlength => 50
						= label_tag 'lessonplan[content]', '教案内容'
						= f.cktext_area :content, :cols => 40
					%hr.soften
				.span5
					.section
						%h5 合作者
						%ul.member-list.clearfix
							%li 
								%img.img-rounded{ :src => "/assets/image10.jpeg" }
							%li 
								%img.img-rounded{ :src => "/assets/image8.jpeg" }
							%li 
								%img.img-rounded{ :src => "/assets/image4.jpeg" }
							%li 
								%img.img-rounded{ :src => "/assets/image5.jpeg" }
						%button.btn.btn-add-task{ :type => "button" }
							申请加入 
							%i.icon-plus-sign
					%hr.soften

					.section
						%h5 正在投票的教学条目
						.task-list
							%li.task{ 'data-toggle' => "collapse", 'data-target' => "#task1" }
								= form_for :task, :url => { :action => 'create' } do |f|	
									%lable 条目名
									%br
									= f.text_field :title, :placeholder => '例如给家乡的火车站拍一张照片...'
									%label 条目内容
									= f.text_area :content, :placeholder => '你的家乡的湖有不同的美...'
									%br
									%a{ :href=> "#" } 添加一条 
									%i.icon-plus-sign

		.span3
			.right-content
				.section
					.plan  
						%a.plan-avatar-placehoder{ :href => "#", 'data-toggle' => "modal", 'data-target' => "#myModal" }
							%img{ :src => "/assets/image-placeholder.png" }
							%p 给教案添加标志图

						#myModal.modal{ :tabindex => "-1", :role => "dialog", 'aria-labelledby' => "myModalLabel", 'aria-hidden' => "true", :style => "display: none; "}
							.modal-header
								%button.close{ :type => "button", 'data-dismiss' => "modal", 'aria-hidden' => "true" } &times;
								%h3#myModalLabel 选择一个标志图
							.modal-body
								%ul.avatar-list.clearfix
									- (1..16).each do |num|
										- url = "/assets/image#{num}.jpeg"
										%li
											%label
												%input{ :type => 'radio', :name => "lessonplan[symbol_img_url]", :value => url, :id => "symbol_img_url_#{num}" }
												%img.img-rounded{ :src => url }
													%i.icon-ok
							.modal-footer
								%button.btn{ 'data-dismiss' => "modal", 'aria-hidden' => "true" } 关闭
								%button.btn.btn-primary{ 'data-dismiss' => "modal", 'aria-hidden' => "true" } 选好了

					%h2.name 教学课件
					%p 每个家乡也许都有一个湖，她的故事就是我家乡的故事。
					%button.btn.btn-like{ :type => "button" } 
						我关注
						%i.icon-heart.icon-white
	    
				%hr.soften
				.section
					%h5 关注者
					%ul.member-list.clearfix
						- (1..8).each do |num|
							%li
								%img.img-rounded{ :src => "/assets/image#{num}.jpeg" }
